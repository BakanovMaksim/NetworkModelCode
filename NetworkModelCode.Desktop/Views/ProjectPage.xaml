<Page x:Class="NetworkModelCode.Desktop.Views.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetworkModelCode.Desktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">

    <Grid x:Name="projectGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TabControl x:Name="mathModelTabControl" Grid.Row="0">
            <TabItem x:Name="tableTabItem" Header="Таблица">
                <DataGrid x:Name="tableDataGrid">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="i" />
                        <DataGridTextColumn Header="j"/>
                        <DataGridTextColumn Header="Продолжительность"/>
                        <DataGridTextColumn Header="Раннее начало"/>
                        <DataGridTextColumn Header="Раннее окончание"/>
                        <DataGridTextColumn Header="Позднее начало"/>
                        <DataGridTextColumn Header="Позднее окончание"/>
                        <DataGridTextColumn Header="Полный резерв"/>
                        <DataGridTextColumn Header="Частный резерв"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem x:Name="graphTabItem" Header="Сетевой график"/>
        </TabControl>
        <StackPanel Grid.Row="1">
            <RichTextBox x:Name="dataSourceRichTextBox" Height="200">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=Project.Data, Mode=TwoWay}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Button x:Name="enterButton" Click="enterButton_Click" Height="25" Margin="350,0,350,0"/>
        </StackPanel>
    </Grid>
</Page>
