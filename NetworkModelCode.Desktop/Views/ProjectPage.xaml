<Page x:Class="NetworkModelCode.Desktop.Views.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetworkModelCode.Desktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">

    <Page.Resources>
        <Style x:Key="dataGridStyle" TargetType="DataGrid">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>
    
    <Grid x:Name="projectGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <ToolBarTray Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch">
            <ToolBar>
                <Button x:Name="importButton" Content="Импорт" Click="importButton_Click" />
                <Button x:Name="exportButton" Content="Экспорт" Click="exportButton_Click" />
            </ToolBar>
        </ToolBarTray>
        <DataGrid x:Name="workSourceDataGrid" Grid.Row="0" Grid.Column="1" Style="{StaticResource dataGridStyle}" ItemsSource="{Binding WorkDataSourceDTOs, Mode=TwoWay}"
                  AutoGeneratingColumn="workSourceDataGrid_AutoGeneratingColumn">
        </DataGrid>

        <DataGrid x:Name="workTimeCharacteristicDataGrid" Grid.Row="0" Grid.Column="2" Style="{StaticResource dataGridStyle}" ItemsSource="{Binding WorkTimeCharacteristicDTOs}"
                  AutoGeneratingColumn="workTimeCharacteristicDataGrid_AutoGeneratingColumn">
        </DataGrid>
        <Button x:Name="enterButton" Grid.Row="1" Grid.Column="2" Click="enterButton_Click" Margin="100"/>
    </Grid>
</Page>
