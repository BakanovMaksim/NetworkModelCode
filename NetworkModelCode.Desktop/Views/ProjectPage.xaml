<Page x:Class="NetworkModelCode.Desktop.Views.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NetworkModelCode.Desktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage">

    <Grid x:Name="projectGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TabControl x:Name="mathModelTabControl" Grid.Row="0">
            <TabItem x:Name="tableTabItem" Header="Таблица">
                <DataGrid x:Name="tableDataGrid" ItemsSource="{Binding WorkTimeCharacteristics}">
                </DataGrid>
            </TabItem>
            <TabItem x:Name="graphTabItem" Header="Сетевой график"/>
        </TabControl>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <RichTextBox x:Name="dataSourceRichTextBox" Grid.Column="0">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=Project.Data, Mode=TwoWay}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Button x:Name="enterButton" Grid.Column="1" Click="enterButton_Click" Margin="100"/>
        </Grid>
    </Grid>
</Page>
